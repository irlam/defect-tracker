# .env.example
# Environment configuration file for local development of the defect tracker.
# This file contains example values for all environment variables used in local development.
# Copy this file to .env and adjust the values as needed for your local setup.

# Application Environment Settings
# Set to 'local' for development, 'production' for live deployment
APP_ENV=local

# Enable debug mode for detailed error messages and logging
# Set to 'true' for development, 'false' for production
APP_DEBUG=true

# Base URL for the application
# This should match where you access the application in your browser
APP_URL=http://localhost:8000

# Database Connection Settings
# These values match the Docker Compose MySQL service configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=defect_tracker
DB_USER=root
DB_PASSWORD=root_password

# Root database password (for database administration)
DB_ROOT_PASSWORD=root_password

# File Upload Settings
# Maximum file size for uploads (in bytes) - currently set to 5MB
MAX_FILE_SIZE=5242880

# Allowed file types for uploads (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Email Configuration (for notifications)
# Update these with your email service details if you want to test email features
EMAIL_FROM=noreply@localhost
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Session Configuration
# Session timeout in seconds (1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Security Settings
# Maximum login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in seconds (1800 = 30 minutes)
LOCKOUT_DURATION=1800

# Timezone Setting
# Set your preferred timezone (e.g., 'Europe/London', 'America/New_York')
TIMEZONE=UTC

# Instructions:
# 1. Copy this file to .env: cp .env.example .env
# 2. Adjust any values as needed for your local setup
# 3. The .env file will be automatically loaded by the application
# 4. Never commit the .env file to version control - it's already in .gitignore